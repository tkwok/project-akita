<section class="section-blog js--section-blog" id="blog">
    <div class="row">
        <h2>{{ post.section_blog_title }}</h2>
    </div>
    <div class="row">    
<!--
        {% for page in pages %}
            <a href="{{page.path}}">{{page.title}}</a>
        {% endfor %}
-->
        {% for post in posts %}
            <article class="post post-type-{{post.post_type}} col span-1-of-3 box" id="post-{{post.ID}}">
                <div class="row article-header">
                    <h3>{{post.title}}</h3>
                </div>
                <div class="row article-body">
                    {{post.content}}
                </div>
            </article>
        {% endfor %}
    </div>
</section>
