<!-- Footer Twig ---->
<footer>    
    <div class="row">
        <div class="col span-1-of-2">
            <ul class="footer-nav">
                <li><a href="#">solutions</a></li>
                <li><a href="#">contact</a></li>
            </ul>
        </div>
        <div class="col span-1-of-2">
            {% if post.get_field('social_link_icons') %}
            <ul class="social-links">
                {% for item in post.get_field("social_link_icons") %}
                    <li>
                        <a href="{{item.social_icon_url}}">
                            <i class="{{item.social_icon}}"></i>
                        </a>
                    </li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="footer-copyright">
            <p>&copy; {{"now"|date('Y')}} TONY KWOK</p>
        </div>
    </div>
    
    
</footer>